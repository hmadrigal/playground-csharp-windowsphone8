<?xml version="1.0" encoding="utf-8"?>

<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.0">
  <CommandSet xml:lang="en-US">
    <CommandPrefix> translate </CommandPrefix>
    <Example> translate from english to spanish </Example>

    <Command Name="TralateFromTo">
      <Example> translate from English to Spanish </Example>
      <ListenFor> [translate from] {source} </ListenFor>
      <ListenFor> [to] {destination} </ListenFor>
      <Feedback> translating ... </Feedback>
      <Navigate Target="/TranslationPage.xaml" />
    </Command>

    <Command Name="TralateTo">
      <Example> translate to Spanish </Example>
      <ListenFor> [translate to] {destination} </ListenFor>
      <Feedback> translating ... </Feedback>
      <Navigate Target="/TranslationPage.xaml" />
    </Command>

    <PhraseList Label="source">
      <Item> english </Item>
      <Item> spanish </Item>
    </PhraseList>

    <PhraseList Label="destination">
      <Item> english </Item>
      <Item> spanish </Item>
    </PhraseList>
  </CommandSet>
