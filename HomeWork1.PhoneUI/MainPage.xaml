                    <ContentControl Tag="59" Template="{StaticResource BlackBlock}"/>
                    <ContentControl Tag="60" Template="{StaticResource WhiteBlock}"/>
                    <ContentControl Tag="61" Template="{StaticResource BlackBlock}"/>
                    <ContentControl Tag="62" Template="{StaticResource WhiteBlock}"/>
                    <ContentControl Tag="63" Template="{StaticResource BlackBlock}"/>
                </StackPanel>
            </StackPanel>
            <ContentControl Template="{StaticResource WhiteChekers}" />
            <ContentControl Template="{StaticResource WhiteChekers}" />
            <ContentControl Template="{StaticResource WhiteChekers}" />
            <ContentControl Template="{StaticResource WhiteChekers}" />
            <ContentControl Template="{StaticResource WhiteChekers}" />
            <ContentControl Template="{StaticResource WhiteChekers}" />
            <ContentControl Template="{StaticResource WhiteChekers}" />
            <ContentControl Template="{StaticResource WhiteChekers}" />
            <ContentControl Template="{StaticResource WhiteChekers}" />
            <ContentControl Template="{StaticResource WhiteChekers}" />
            <ContentControl Template="{StaticResource WhiteChekers}" />
